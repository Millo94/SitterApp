<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgPrSitter2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="5dp"
            android:padding="15dp"
            android:src="@drawable/ic_account_circle_black_56dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeCompletoPrFamiglia"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="5dp"
                android:paddingStart="5dp"
                android:text="@string/nomeCompleto"
                android:textColor="@color/colorScritte"
                android:textSize="40sp" />

            <RatingBar
                android:id="@+id/ratingPrFamiglia"
                android:layout_width="wrap_content"
                android:layout_height="59dp"
                android:backgroundTint="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/descrizionePrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/emailPrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="fill_vertical"
        android:text="@string/email"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/emailPrFamiglia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/email"
        android:textSize="18sp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <TextView
        android:id="@+id/telefonoPrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="fill_vertical"
        android:text="@string/telefono"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/telefonoPrFamiglia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/telefono"
        android:textSize="18sp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <TextView
        android:id="@+id/figliPrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="fill_vertical"
        android:text="@string/figlinum"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/figliPrFamiglia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/figlinum"
        android:textSize="18sp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <TextView
        android:id="@+id/nazionePrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="fill_vertical"
        android:text="@string/nazione"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nazionePrFamiglia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/nazione"
        android:textSize="18sp"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <TextView
        android:id="@+id/cittaPrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/citta"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cittaPrFamiglia2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/citta"
        android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <Switch
        android:id="@+id/animaliPrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/animali"
        android:textColor="@color/colorScritte"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    <ToggleButton
        android:id="@+id/togglePrFamiglia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorPrimary"
        android:checked="true"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textOff="@string/modificaProfiloOff"
        android:textOn="@string/modificaProfiloOn" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="@string/exit"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</LinearLayout>